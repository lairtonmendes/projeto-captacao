              <ul class="dropdown-menu">
                <li><i class="glyphicon glyphicon-triangle-right" aria-hidden="true"></i> <%= link_to "Fortaleza", "/path1"  %></li>
                <li><i class="glyphicon glyphicon-triangle-right"></i> <%= link_to "Metropolitana", "/path1"  %><li>
