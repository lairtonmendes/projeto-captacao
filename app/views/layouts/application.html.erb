    <div class="navbar navbar-default">
      <div class="container-fuild">
        <div class="navbar-brand" href="#">
        <i> Farol</i>
        </div>
        <ul class="nav navbar-nav">
            <li><i class="glyphicon  glyphicon-plus"></i> <%= link_to "Inserir", "/path1"  %></li>
