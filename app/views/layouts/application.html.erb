                <li><i class="glyphicon glyphicon-triangle-right"></i> <%= link_to "Centro Sul", "/path1"  %></li>
                <li role="separator" class="divider"></li>
                <li><i class="glyphicon glyphicon-chevron-righ"></i> <%= link_to "Todos", "/path1"  %></li>
              </ul>
            </li>

            

        </ul>
        <div class="container-fluid">
        <ul class="nav navbar-nav navbar-right container-fluid">
          <% if user_signed_in? %>
            <li class=""><a><%= current_user.email %></a></li>
